/**
 * Configuration file was created at this moment:
 * - tslint: 5.20.0
 * - tslint-react: 4.0.0
 */
 {
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "rules": {
        /* TypeScript-specific. */

        "member-ordering": {
            "options": {
                "alphabetize": false,
                "order": [
                    "public-static-field",
                    "protected-static-field",
                    "private-static-field",
                    "public-static-method",
                    "protected-static-method",
                    "private-static-method",
                    "public-instance-field",
                    "protected-instance-field",
                    "private-instance-field",
                    "public-constructor",
                    "protected-constructor",
                    "private-constructor",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }
        },
        // we use this in some places because of React.
        "no-empty-interface": false,
        "no-namespace": [
            true,
            "allow-declarations"
        ],
        "no-non-null-assertion": true,
        "promise-function-async": true,

        /* Functionality. */

        "await-promise": true,
        "ban-comma-operator": true,
        "function-constructor": true,
        "no-console": false,
        "no-async-without-await": true,
        "no-duplicate-switch-case": true,
        "no-floating-promises": true,
        "no-for-in-array": true,
        "no-invalid-template-strings": true,
        "no-invalid-this": true,
        // it is required in some places, but better to avoid.
        // "no-null-keyword": true,
        "no-null-undefined-union": true,
        "no-return-await": true,
        "no-sparse-arrays": true,
        "no-switch-case-fall-through": true,
        "no-tautology-expression": true,
        "no-this-assignment": true,
        // `false` because of React.
        // see https://github.com/palantir/tslint/issues/3016
        "no-unbound-method": false,
        // Deprecated since TypeScript 2.9. Use the built-in compiler checks instead.
        // "no-unused-variable": true,
        "no-void-expression": true,
        // For short expressions it is better to use conditional expression,
        // but for long expressions it is better to use normal if/else.
        "prefer-conditional-expression": false,
        "prefer-object-spread": true,
        "restrict-plus-operands": true,
        "strict-comparisons": false,
        "strict-type-predicates": true,
        "triple-equals": [
            true,
            "allow-null-check",
            "allow-undefined-check"
        ],
        "unnecessary-constructor": true,

        /* Maintainability. */

        "cyclomatic-complexity": true,
        "deprecation": true,
        "indent": [
            true,
            "spaces",
            4
        ],
        "max-classes-per-file": false,
        "max-line-length": [
            true,
            {
                "limit": 120,
                "ignore-pattern": "^import |^export {(.*?)}|class [a-zA-Z]+ implements |//"
            }
        ],
        "no-duplicate-imports": true,
        "no-require-imports": true,
        "object-literal-sort-keys": false,
        "prefer-readonly": true,
        // Don't ever try to accustom yourself too much to JavaScript!
        "trailing-comma": false,

        /* Style. */

        "binary-expression-operand-order": true,
        "encoding": true,
        "file-name-casing": [
            true,
            {
                "^_[^_]+": "snake-case", // like `_index.ts`.
                ".*": "kebab-case" // all the rest.
            }
        ],
        "import-spacing": false,
        "interface-name": false,
        "interface-over-type-literal": false,
        "match-default-export-name": false,
        "newline-before-return": true,
        // "newline-per-chained-call": true,
        "no-boolean-literal-compare": true,
        "no-consecutive-blank-lines": [
            true,
            2
        ],
        "no-irregular-whitespace": true,
        "no-redundant-jsdoc": true,
        "no-unnecessary-initializer": false,
        "object-literal-shorthand": false,
        "ordered-imports": false,
        "prefer-switch": [
            true,
            {
                "min-cases": 3
            }
        ],
        "prefer-template": [
            true,
            "allow-single-concat"
        ],
        "prefer-while": true,
        "quotemark": [
            true,
            "double",
            "avoid-template",
            "avoid-escape"
        ],
        "return-undefined": true,
        "space-within-parens": true,
        "switch-final-break": [
            true,
            "always"
        ],
        "variable-name": [
            true,
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case",
            "ban-keywords"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock"
        ],

        /* TSLint React */

        "jsx-space-before-trailing-slash": true,
        "jsx-no-multiline-js": false
    }
}
